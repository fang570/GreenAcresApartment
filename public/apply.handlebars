            <div class="container-fluid pr-0 pl-0">
                <div class="row headerText">
                    <div class= "col-md-6 mx-auto">
                        <h1>Apply Here</h1>
                        <p>Download the form below and fill it out</p>
                        <a class="formDownload" href="/documents/APPLICATION_TO_RENT.pdf" target="_blank">Form</a>
                    </div>
                </div>

                <p class="sentMSG">{{sentMSG}}</p>

                <form method="POST" action="application" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-md-6 col-8 col-s-8 mx-auto">
                            <label form="nameInput" >Name</label>
                            <input type="text" name="name" class="form-control" id="nameInput" required="true">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 col-8 col-s-8 mx-auto">
                            <label for="emailInput">Email</label>
                            <input type="email" name="email" class="form-control" id="emailInput" required="true">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 col-8 col-s-8 mx-auto">
                            <label for="phoneInput">Phone Number (xxx-xxx-xxxx)</label>
                            <input type="tel" name="phoneNumber" class="form-control" id="phoneInput" required="true" pattern="^\d{3}-\d{3}-\d{4}$">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 col-8 col-s-8 mx-auto">
                            <label for="formControlTextArea1">Notes</label>
                            <textarea class="form-control" name="notes" id="formControlTextArea1" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 col-8 col-s-8 mx-auto">
                            <input name="fileSent" type="file" class="form-control-file" id="files" accept="application/pdf/">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-sm-10 mx-auto">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>


